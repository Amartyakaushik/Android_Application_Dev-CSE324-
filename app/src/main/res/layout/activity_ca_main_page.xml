<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CA02.CaMainPage">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_layout"
        android:hint="Enter Task"
        android:textColorHint="@color/black"
        android:gravity="center"
        android:backgroundTint="#4A000000"
        android:id="@+id/taskInfo"/>

    <Button
        android:id="@+id/taskButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/black"
        android:text="Add Task"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@+id/taskInfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/taskInfo"
        app:layout_constraintEnd_toEndOf="@+id/taskInfo"/>

</androidx.constraintlayout.widget.ConstraintLayout>